    "eslint": "^9.33.0",
    "eslint-config-next": "^15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "get-git-folder": "^0.1.2",
    "globals": "^16.3.0",
