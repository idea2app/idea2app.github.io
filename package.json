    "mobx-react": "~9.0.2",
    "mobx-restful": "^0.6.12",
    "mobx-restful-table": "^1.2.2",
    "next": "^14.0.4",
    "next-pwa": "~5.6.0",
    "next-ssr-middleware": "^0.6.1",
    "next-with-less": "^3.0.1",
