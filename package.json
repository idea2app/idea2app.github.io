{
  "name": "@idea2app/ows",
  "version": "3.0.0",
  "description": "React project scaffold based on TypeScript, Next.js, Bootstrap & Workbox.",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@giscus/react": "^3.1.0",
    "@koa/bodyparser": "^5.1.1",
    "@koa/router": "^13.1.0",
    "@mui/lab": "^7.0.0-beta.11",
    "@mui/material": "^7.0.2",
    "@sentry/nextjs": "^9.15.0",
    "file-type": "^20.5.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.16.1",
    "koa-jwt": "^4.0.4",
    "koajax": "^3.1.2",
    "lodash": "^4.17.21",
    "marked": "^15.0.11",
    "mime": "^4.0.7",
    "mobx": "^6.13.7",
    "mobx-github": "^0.3.5",
    "mobx-i18n": "^0.6.0",
    "mobx-lark": "^2.2.0",
    "mobx-react": "^9.2.0",
    "mobx-restful": "^2.1.0",
    "next": "^15.3.1",
    "next-pwa": "~5.6.0",
    "next-ssr-middleware": "^0.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "web-utility": "^4.4.3",
    "webpack": "^5.99.7"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.27.1",
    "@babel/plugin-transform-typescript": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "@cspell/eslint-plugin": "^8.19.4",
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.26.0",
    "@next/eslint-plugin-next": "^15.3.1",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@tailwindcss/postcss": "^4.1.5",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.4",
    "@types/lodash": "^4.17.16",
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "eslint": "^9.26.0",
    "eslint-config-next": "^15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "resolutions": {
    "next": "$next"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@sentry/cli",
      "sharp",
      "unrs-resolver"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "tabWidth": 2,
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-css-order",
      "prettier-plugin-tailwindcss"
    ]
  },
  "lint-staged": {
    "*.{html,md,less,json,yml,js,mjs,ts,tsx}": "prettier --write"
  },
  "scripts": {
    "prepare": "husky  &&  touch .env.local",
    "dev": "next dev",
    "build": "next build",
    "export": "next build  &&  next export",
    "start": "next start",
    "lint": "next lint --fix  &&  git add .",
    "test": "lint-staged  &&  npm run lint  &&  tsc --noEmit",
    "pack-image": "docker build -t idea2app/web-server .",
    "container": "docker rm -f web-server  &&  docker run --name web-server -p 3000:3000 -d idea2app/web-server"
  }
}
