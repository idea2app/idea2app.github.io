    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "resolutions": {
    "next": "$next"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@sentry/cli",
      "@tailwindcss/oxide",
      "sharp",
      "unrs-resolver"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "tabWidth": 2,
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-css-order",
      "prettier-plugin-tailwindcss"
    ]
  },
  "lint-staged": {
    "*.{html,md,less,json,yml,js,mjs,ts,tsx}": "prettier --write"
  },
  "scripts": {
    "prepare": "husky || true",
    "install": "get-git-folder https://github.com/idea2app/key-vault main idea2app.github.io  ||  true",
    "dev": "next dev",
    "build": "next build",
    "export": "next build  &&  next export",
    "start": "next start",
    "lint": "next lint --fix  &&  git add .  &&  tsc --noEmit",
    "test": "lint-staged  &&  npm run lint",
    "pack-image": "docker build -t idea2app/web-server .",
    "container": "docker rm -f web-server  &&  docker run --name web-server -p 3000:3000 -d idea2app/web-server"
  }
}
