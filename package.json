{
    "name": "@idea2app/ows",
    "version": "0.4.0",
    "description": "idea2app 官方网站",
    "main": "src/index.html",
    "dependencies": {
        "boot-cell": "^1.9.5",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.4",
        "classnames": "^2.3.1",
        "web-cell": "^2.3.0",
        "web-utility": "^2.4.4"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.11",
        "@types/node": "^14.14.37",
        "@typescript-eslint/parser": "^4.22.0",
        "autoprefixer": "^9.8.6",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^6.0.0",
        "lint-staged": "^10.5.4",
        "parcel-bundler": "^1.12.5",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.2.1",
        "typescript": "^4.2.4",
        "workbox-cli": "^6.1.5"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": "prettier --write",
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "start": "parcel src/index.html --open",
        "pack": "parcel build src/index.html --public-url .",
        "build": "rm -rf dist/  &&  npm run pack  &&  workbox generateSW"
    }
}
