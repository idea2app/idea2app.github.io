{
    "name": "@idea2app/ows",
    "version": "0.4.0",
    "description": "idea2app 官方网站",
    "main": "src/index.html",
    "dependencies": {
        "boot-cell": "^1.9.2",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.4",
        "classnames": "^2.2.6",
        "web-cell": "^2.3.0-rc.2",
        "web-utility": "^2.4.4"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.11",
        "@types/node": "^14.14.28",
        "@typescript-eslint/parser": "^4.15.1",
        "autoprefixer": "^9.8.6",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.2.1",
        "typescript": "^4.1.5",
        "workbox-cli": "^6.1.0"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": "prettier --write",
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "parcel src/index.html --open",
        "pack": "parcel build src/index.html --public-url .",
        "build": "rm -rf dist/  &&  npm run pack  &&  workbox generateSW"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
